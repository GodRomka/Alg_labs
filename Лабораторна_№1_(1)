// Знайти суму чисел кубів від’ємних і найменше з додатних чисел. Розмірність 12. 
#include <iostream>
#include <limits> // Включення бібліотеки для роботи з межами чисел

int main() {
    const int size = 12; // Константа, що визначає розмір масиву
    int numbers[size] = {-2, 3, 5, -7, -1, 4, 8, -6, 9, -10, 2, 11}; // Масив з 12 цілих чисел

    int min_positive = std::numeric_limits<int>::max(); // Ініціалізація змінної min_positive максимальним можливим значенням для int
    int sum_of_negative_cubes = 0; // Ініціалізація змінної sum_of_negative_cubes нулем

    for (int i = 0; i < size; ++i) { // Цикл, що проходиться по елементам масиву
        if (numbers[i] < 0) { // Умова перевіряє, чи є поточний елемент від'ємним
            sum_of_negative_cubes += numbers[i] * numbers[i] * numbers[i]; // Якщо так, додає куб цього числа до суми від'ємних кубів
        } else if (numbers[i] > 0 && numbers[i] < min_positive) { // Якщо елемент додатний і менший за поточне найменше додатнє число
            min_positive = numbers[i]; // Оновлюємо найменше додатнє число
        }
    }

    std::cout << "Сума кубів від'ємних чисел: " << sum_of_negative_cubes << std::endl; // Виведення суми кубів від'ємних чисел
    std::cout << "Найменше додатнє число: " << min_positive << std::endl; // Виведення найменшого додатнього числа

    return 0; // Кінець програми, повертає 0, що означає успішне завершення програми
}
